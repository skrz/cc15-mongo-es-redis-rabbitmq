<!doctype html>
<html>
<head>
    <title>CC15</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
    <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css">
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js" async defer></script>
    <script src="https://code.jquery.com/jquery-1.11.3.min.js" async defer></script>
</head>
<body>
<div class="container">
    <div class="row">
        <div class="col-md-6">
            <h1><a href="{{ url("homepage") }}">CC15</a></h1>
        </div>
        <div class="col-md-6 text-right">
            <form action="{{ url("search") }}" method="get" class="form form-inline h1">
                <div class="input-group input-group-lg">
                    <input type="search" name="q" placeholder="Začněte hledat..." class="form-control"{% if q is defined %} value="{{ q }}"{% endif %}>
                    <span class="input-group-btn">
                        <button type="submit" class="btn btn-default"><i class="fa fa-search"></i></button>
                    </span>
                </div>
            </form>
        </div>
    </div>
    {{ render("/_fragment/Page/pageUsersOnline") }}
    {% block body %}
    {% endblock %}
</div>
</body>
</html>
